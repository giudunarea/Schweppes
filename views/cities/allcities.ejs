<!DOCTYPE html>
<html lang="en">
   <%-  include("../../partials/head.ejs")%>
   <body class="font-poppins overflow-y-auto overflow-x-hidden scrollbar scrollbar-thin scrollbar-rounded-lg" id="particles-js">
      <div id="googleMap"></div>
      <wrap class="flex justify-center">
         <section class="bg-cover bg-center w-[98%] rounded-lg mt-[1rem]"
            style="background-image: url('../dist/images/homebg.jpg'); ">
            <%- include("../../partials/navbar.ejs")%>
            <section class="mb-[7rem]">
               <p class="uppercase text-[#DEE2E6] pt-10 px-[5rem]">Cities</p>
               <div class="px-[5rem] flex justify-between">
                  <div class="flex flex-col">
                     <div class="flex flex-col ">
                        <p class="text-[3rem] bg-gradient-to-r from-button-blue to-purple-500 text-transparent bg-clip-text">
                           Explore the Beauty of Romania:  
                        </p>
                        <p class="text-[3rem] text-[#DEE2E6]">Where History Meets Nature.</p>
               </div>
               </div>
            </section>
         </section>
      </wrap>
      <section class="pt-10 px-[5.5rem] mb-[3rem]">
         <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
            <% for (let index = 0 ; index < cities.length ; index ++) { %>
            <a class="flex flex-col rounded-md borderounded-lg shadow md:flex-row md:w-xl  border-gray-700 bg-[#282E30] hover:bg-gray-700">
               <img class="object-cover w-full rounded-t-lg h-32 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
                  src=<%=cities[index].banner_image%> alt="">
               <div class="flex flex-col justify-between p-4 leading-normal">
                  <div>
                     <% let city_title_upper = cities[index].name[0].toUpperCase() + cities[index].name.slice(1);%>
                     <p class="text-button-blue text-sm">Muntii | Peisaje</p>
                     <h5 class="mb-2 text-2xl font-bold tracking-tight  text-white"><%=city_title_upper%></h5>
                     <p class="mb-3 font-normal text-gray-400 line-clamp-4 hover:line-clamp-none onclick:line-clamp-none transition-500"><%=cities[index].description%></p>
                  </div>
                  <button onclick="window.location.href='/cities/<%=cities[index].name%>';">
                     <p class="p-3 text-alice-blue bg-button-blue rounded-md mt-[2rem]">View City</p>
                  </button>
               </div>
            </a>
            <% } %>
         </div>
         <%- include("../../partials/footer") %>
      </section>
      <script src="../dist/scripts/particles/script.js"></script>
      <script src="../dist/scripts/particles/app.js"></script>
      <script src="../dist/scripts/particles/particles.min.js"></script>
   </body>
</html>